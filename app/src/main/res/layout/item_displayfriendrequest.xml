<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView_ProfilePic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_DisplayUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/changeUsernameDefault_account_settings"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_displayShortEMail"
        app:layout_constraintStart_toEndOf="@+id/circleImageView_ProfilePic"
        app:layout_constraintTop_toTopOf="@+id/circleImageView_ProfilePic" />

    <TextView
        android:id="@+id/textView_displayShortEMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/user_DEFAULT_SHORT_Email"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView_ProfilePic"
        app:layout_constraintStart_toEndOf="@+id/circleImageView_ProfilePic"
        app:layout_constraintStart_toStartOf="@+id/textView_DisplayUsername" />

    <ImageView
        android:id="@+id/button_acceptFriendRequest"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_check_green"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@id/button_declineFriendRequset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <ImageView
        android:id="@+id/button_declineFriendRequset"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@android:color/darker_gray"
        android:src="@drawable/ic_decline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>