<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dialogaddFriend_ProfilePic"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/textView_DisplayUsername_Dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/default_username_home_displayUsername"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/dialogaddFriend_ProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/dialogaddFriend_ProfilePic" />

    <Button
        android:id="@+id/button_sendFriendRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/send_friend_request_dialog_show_user"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/dialogaddFriend_ProfilePic"
        app:layout_constraintStart_toStartOf="@+id/dialogaddFriend_ProfilePic"
        app:layout_constraintTop_toBottomOf="@+id/textView_DisplayUsername_Dialog" />
</androidx.constraintlayout.widget.ConstraintLayout>