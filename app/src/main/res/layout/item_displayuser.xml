<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView_ProfilePic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_default_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_DisplayUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/changeUsernameDefault_account_settings"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_displayShorEMail"
        app:layout_constraintStart_toEndOf="@+id/circleImageView_ProfilePic"
        app:layout_constraintTop_toTopOf="@+id/circleImageView_ProfilePic" />

    <TextView
        android:id="@+id/textView_displayShorEMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/user_DEFAULT_SHORT_Email"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView_ProfilePic"
        app:layout_constraintStart_toEndOf="@+id/circleImageView_ProfilePic"
        app:layout_constraintStart_toStartOf="@+id/textView_DisplayUsername" />

</androidx.constraintlayout.widget.ConstraintLayout>